    <div>
        <h1>Iniciar Sesión</h1>
        <form>
            <div class="correo">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div class="contraseña">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required />
            </div>
            <button type="submit" class="button">Iniciar Sesión</button>
        </form>
    </div>

    <style>
        .correo {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 1rem;
        }
        .contraseña {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .correo h1, .contraseña h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        h1 {
            text-align: center;
        }
        label {
            display: block;
            margin-bottom: 8px;
        }
        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 3px;
            border: 1px solid #ccc;
        }
    
    .button {
        background-color: pink;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 3px;
        font-weight: bold;
        cursor: pointer;
        margin: 0 auto;
        display: block;
        transition: background-color 0.3s, opacity 0.3s;
        margin-top: 1rem;
    }
    .button:hover {
        background-color: rgb(249, 141, 157);
        opacity: 0.8;
    }
