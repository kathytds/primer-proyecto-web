  <div class="swiper-pagination"></div>

  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <div class="swiper-scrollbar"></div>
  <div class="swiper-slide" data-swiper-autoplay="2000"></div>

  <style>
    .jumbotron {
      background-color: #f8f9fa;
      padding: 2rem;
      text-align: center;
      margin-bottom: 2rem;
    }
    .imagen {
      display: flex;
      justify-content: left;
      margin-bottom: 1rem;
    }

    .title-container > * {
      text-align: right;
    }
    .title-container h1 {
      justify-content: center;
      align-items: center;
      text-align: center;
    }
    .title-container p {
      align-items: center;
      justify-content: center;
      text-align: center;
      margin-bottom: 1rem;
    }
    .title-container ul {
      list-style-type: none;
      padding: 0;
      justify-content: right;
    }
    .title-container li {
      margin-bottom: 0.5rem;
      justify-content: right;
    }

    /* .image-container {
      display: flex;
